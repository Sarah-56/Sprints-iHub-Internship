#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include "xo.h"

char board[3][3] = {{'0', '1', '2'}, {'3', '4', '5'}, {'6', '7', '8'}};




int main(void) {
	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);

	displayBoard();
	int player = 1, choice, result;/*1 or 2*/
	char xoro;
	for(int i = 0; i < 9; i++){
		displayBoard();
		player = (player % 2) ? 1 : 2;
		printf("Player %d, enter a number:  ", player);
		scanf("%d", &choice);
		xoro = (player == 1) ? 'X' : 'O';
		//if (board[choice] != 'X' || board[choice] != 'O'){board[choice] = xoro;}
		if(player == 1){
			player++;
		}
		else{
			player--;
		}
	}
	result = checkWin();
	switch(result){
	case 1:
		break;
	case 0:
		break;
	case -1:
		break;
	}
	return 0;
}
