/*****************************************************
 *                   INCLUDES
 *****************************************************/

#include "ECUAL/Button/buttons.h"
#include "ECUAL/Motor/motors.h"
#include "micro_config.h"

/*****************************************************
 *                   Global Variables
 *****************************************************/
uint8_t button;
uint8_t sp = 30;
Direction direct = Forward;
uint8_t count = 0;

/*****************************************************
 *                   MAIN FUNCTION
 *****************************************************/
int main(void){
	/*Initializations*/
	motor_init();
	button_init();

	while(1)
	{
		switch(button_read()){
		case 5:
			set_direction(Left);
			break;
		case 6:
			set_direction(Right);
			break;
		case 0:
			motor_stop();
			break;
		case 12:
			if(count == 3){
				count = 0;
				motor_start(30, Backward);
			}
			else{
				switch(count){
				case 0:
					motor_start(30, Forward);
					break;
				case 1:
					motor_start(60, Forward);
					break;
				case 2:
					motor_start(90, Forward);
					break;
				}
			}
			count++;
			break;
		}
	}
	return 0;
}

