#ifndef MOTORS_H_
#define MOTORS_H_

#include "../../MCAL/DIO/DIO.h"
#include "../../MCAL/timer/timer.h"

typedef enum{
	Forward,
	Backward,
	Left,
	Right
}Direction;

extern uint8_t speed;
extern Direction direct;

void motor_init();
void set_speed(uint8_t duty_cycle);
void set_direction(uint8_t dir);
void motor_start(uint8_t speed, uint8_t dir);

#endif /* MOTORS_H_ */
