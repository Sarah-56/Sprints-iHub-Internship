#include "buttons.h"
static PORT_Config_t PORTa;
void button_init(){
	PORTa.Data = 0;/*initially off*/
	PORTa.direction = 0;
	PORTa.port = A;
	Port_Init(&PORTa);
}
uint8_t button_read(PORT_Config_t *Port){
	Read_Port(&Port);
	switch(Port->Data){
		case 0:
			return 0;
		case 1:
			return 1;
		case 2:
			return 2;
		case 3:
			return 3;
	}
}

uint8_t buttons_read(){
	return button_read(&PORTa);
}
uint8_t read_L(void){
	Read_Port(&PORTa);
	if(PORTa.Data & 0x01){
		return 1;
	}
	return 0;

}
uint8_t read_R(void){
	Read_Port(&PORTa);
	if(PORTa.Data & 0x02){
		return 1;
	}
	return 0;
}
uint8_t read_M(void){
	Read_Port(&PORTa);
	if(PORTa.Data & 0x04){
		return 1;
	}
	return 0;

}
uint8_t read_G(void){
	Read_Port(&PORTa);
	if(PORTa.Data & 0x08){
		return 1;
	}
	return 0;

}
